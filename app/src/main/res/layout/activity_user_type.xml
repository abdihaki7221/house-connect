<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authModule.UserType">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/back_arrow"/>



    <ImageView
        android:id="@+id/started_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"
        android:src="@drawable/category" />

    <LinearLayout
        android:id="@+id/splash_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/started_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/house_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:text="category"
            android:fontFamily="serif-monospace"
            android:layout_gravity="center_vertical" />



    </LinearLayout>

    <Button
        android:id="@+id/job_seeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_linear"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_button_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Job Seeker"
        android:fontFamily="serif-monospace"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />



    <Button
        android:id="@+id/recruiter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_seeker"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_button_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Recruiter"
        android:fontFamily="serif-monospace"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/userType_errorTextView"
        android:textSize="16sp"
        android:visibility="visible"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="start"/>


</RelativeLayout>